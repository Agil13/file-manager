<Window x:Class="FileManager.ReplaceOrSkipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
        Title="ReplaceOrSkipWindow" Height="290" Width="525" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Name="TextBlock" Padding="5" Grid.Row="0" Text="The destination already has a file named - "
                   TextWrapping="Wrap"
                   FontSize="20" />
        <Button Click="ReplaceBtn_OnClick" BorderThickness="0" Background="Transparent" Padding="5" Grid.Row="1"
                Margin="10" Content="Replace the file in the destination" FontSize="18"
                HorizontalContentAlignment="Left" />
        <Button Click="SkipBtn_OnClick" BorderThickness="0" Background="Transparent" Padding="5" Grid.Row="2"
                Margin="10" Content="Skip this file" HorizontalContentAlignment="Left" FontSize="18" />
    </Grid>
</Window>